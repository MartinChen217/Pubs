@{
    ViewBag.Title = "員工管理系統";
}

<p>
    <a class="btn btn-primary btn-lg" href="/Pub/Create" style="text-decoration:none;color:white">新增員工</a>
</p>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <td>員工編號</td>
            <td>姓名</td>
            <td>聘請時間</td>
            <td>職稱</td>
            <td>出版商</td>
            <td>城市</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.emp_id</td>
                <td>@employee.name</td>
                <td>@employee.hire_date</td>
                <td>@employee.job_desc</td>
                <td>@employee.pub_name</td>
                <td>@employee.city</td>
                <td>
                    @Html.ActionLink("編輯", "Edit", new { emp_id = employee.emp_id }) |
                    @Html.ActionLink("刪除", "Delete", new { emp_id = employee.emp_id })
                </td>
            </tr>
        }
    </tbody>
</table>